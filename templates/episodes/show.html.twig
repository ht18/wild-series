{% extends 'base.html.twig' %}
{% block title %}Episode #{{ episode.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Season
				{{ season.number }}</p>
			<p>Episode
				{{ episode.number }}</p>
			<p>Episode
				{{ episode.synopsis }}</p>

		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour Ã  la liste des programmes
	</a>
	{% if app.user %}
		<a href="{{ path('app_comment_index', { program_id: program.id, season_id: season.id, episode_id: episode.id } ) }}">Comment</a>
	{% endif %}
{% endblock %}
