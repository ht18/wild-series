{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1>Toutes les séries de la table program :
	</h1>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button>Search</button>
	{{ form_end(form) }}
	{% for program in programs %}
		<div>
			{% if  program.poster  %}
				<img src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }}">
			{% endif %}
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<p>{{ program.synopsis }}</p>
			<a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}


	<a href="{{ path('app_home') }}">
		Retour à l'accueil
	</a>
{% endblock %}
