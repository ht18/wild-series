{% extends 'base.html.twig' %}

{% block title %}Season #{{ season.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<h1 class="mt-0">{{ season.description }}</h1>
			<h1 class="mt-0">{{ season.number }}</h1>
			<h1 class="mt-0">{{ season.year }}</h1>
			{% for episode in episodes %}
				<p>{{ episode.title }}</p>
			{% endfor %}
		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour Ã  la liste des programmes
	</a>
{% endblock %}
